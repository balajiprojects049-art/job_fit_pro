generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LoginHistory {
  id        String   @id @default(cuid())
  userId    String
  loginAt   DateTime @default(now())
  ipAddress String?
  user      User     @relation(fields: [userId], references: [id])
}

model ResumeLog {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  jobTitle     String?
  companyName  String?
  matchScore   Int?
  originalName String?
  userEmail    String?
  userId       String?
  status       String   @default("SUCCESS")
  isFavorite   Boolean  @default(false)
  user         User?    @relation(fields: [userId], references: [id])
}

model SystemActivity {
  id        String   @id @default(cuid())
  userId    String
  action    String
  details   String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  password       String
  name           String?
  phone          String?
  profileImage   String? // Profile photo URL or base64
  status         String           @default("PENDING") // PENDING, APPROVED, REJECTED
  
  // Subscription Fields
  plan                String   @default("NONE") // NONE, FREE, PRO
  hasFullAccess       Boolean  @default(false) // Admin grants this after review
  creditsUsed         Int      @default(0) // Resumes generated this month
  subscriptionExpires DateTime? 
  
  // Daily Resume Limit
  dailyResumeCount Int      @default(0) // Resumes generated today
  dailyResumeLimit Int      @default(70) // Max resumes per day
  lastResumeDate   DateTime? // Last resume generation date
  
  createdAt      DateTime         @default(now())
  LoginHistory   LoginHistory[]
  ResumeLog      ResumeLog[]
  SystemActivity SystemActivity[]
  Feedback       Feedback[]
}

model Feedback {
  id        String   @id @default(cuid())
  userId    String
  rating    Int      // 1-5 stars
  category  String   // Bug, Feature, General, etc.
  message   String
  status    String   @default("PENDING") // PENDING, REVIEWED, RESOLVED
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
